<!-- views/view_secret.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no">
  <!-- Prevent link previews -->
  <meta name="robots" content="noindex, nofollow">
  <meta property="og:title" content="Secure Message - Click to view">
  <meta property="og:description" content="This message will self-destruct after viewing">
  <meta property="og:image" content="/img/lock-icon.png">
  <title>Secret message</title>
  <link rel="stylesheet" href="/css/css.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>

<body>
  <div class="container">
    <!-- Confirmation step before revealing the secret -->
    <div id="confirmationContainer">
      <p>A secure message is waiting for you.</p>
      <button id="revealSecret">Click to reveal message</button>
    </div>

    <!-- Secret display container -->
    <div id="secretContainer" style="display: none;">
      <textarea id="result" rows="5"><%= secret %></textarea>
      <button id="copySecret">Copy</button>
      <button id="createNew" style="display: none;" onclick="window.location.href='/'">Create new secret</button>
    </div>
    <div id="copyMessage"></div>
  </div>
  <a href="https://github.com/kodakorg/ots.olhustad.no" class="git-link" target="_blank" rel="noopener noreferrer">
    <img
      src="https://img.shields.io/badge/github.com-kodakorg%2Fots.olhustad.no-orange?style=plastic&logo=github&logoSize=auto"
      alt="GitHub stars">
  </a>

  <script>
    // Store encrypted secret data globally but don't decrypt until user confirms
    let encryptedSecretData = null;

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function () {
      initializeSecret();
    });

    // Initial setup - parse the encrypted data but don't decrypt yet
    function initializeSecret() {
      const secretContent = document.getElementById('result').textContent;

      // Check if the secret was not found on the server
      if (secretContent === 'notfound') {
        showError("Secret does not exist or has already been viewed");
        return false;
      }

      // Check for crawler message
      if (secretContent === 'Please open this link directly in your browser') {
        showError("Please open this link directly in your browser");
        return false;
      }

      try {
        encryptedSecretData = JSON.parse(secretContent);
        return true;
      } catch (error) {
        console.error("Could not parse the encrypted message", error);
        showError("Invalid encrypted message");
        return false;
      }
    }

    // Show error state with navigation option
    function showError(message) {
      document.getElementById('result').value = message;
      document.getElementById('confirmationContainer').style.display = 'none';
      document.getElementById('secretContainer').style.display = 'block';
      document.getElementById('copySecret').style.display = 'none';
      document.getElementById('createNew').style.display = 'inline-block';
    }

    // Copy secret to clipboard
    document.getElementById('copySecret').addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(document.getElementById('result').value);
        document.getElementById('copyMessage').textContent = 'Secret copied to clipboard!';
      } catch (error) {
        console.error('Could not copy secret:', error);
        document.getElementById('copyMessage').textContent = 'Could not copy secret.';
      }
    });

    // Reveal and decrypt the secret when button is clicked
    document.getElementById('revealSecret').addEventListener('click', async () => {
      document.getElementById('confirmationContainer').style.display = 'none';
      document.getElementById('secretContainer').style.display = 'block';

      if (!encryptedSecretData) {
        showError("No encrypted data available");
        return;
      }

      // Decrypt the secret first (before deleting from server)
      const decryptedText = await decryptSecret();

      if (!decryptedText) {
        // Decryption failed, show create new button
        document.getElementById('copySecret').style.display = 'none';
        document.getElementById('createNew').style.display = 'inline-block';
        return;
      }

      // Extract the secret ID from the URL
      const secretId = window.location.pathname.split('/').pop();

      // Delete the secret from the server after successful decryption
      try {
        const response = await fetch(`/secret/${secretId}`, {
          method: 'DELETE',
        });
        const result = await response.json();
        console.log('Secret deleted from server:', result);
      } catch (error) {
        console.error('Failed to delete secret from server:', error);
        // Non-critical error, secret was still decrypted successfully
      }
    });

    async function decryptSecret() {
      // Extract decryption key from URL hash
      const hash = window.location.hash.substring(1);
      const params = new URLSearchParams(hash);
      const keyBase64 = params.get('key');

      if (!keyBase64) {
        console.error("No key found in URL");
        document.getElementById('result').value = "No decryption key found in URL";
        return null;
      }

      try {
        // Convert base64 key to binary
        const keyBinaryString = atob(keyBase64);
        const keyBuffer = new Uint8Array(keyBinaryString.length);
        for (let i = 0; i < keyBinaryString.length; i++) {
          keyBuffer[i] = keyBinaryString.charCodeAt(i);
        }

        // Import the crypto key
        const cryptoKey = await window.crypto.subtle.importKey(
          'raw',
          keyBuffer,
          { name: 'AES-GCM' },
          false,
          ['decrypt']
        );

        // Prepare IV and ciphertext
        const iv = new Uint8Array(encryptedSecretData.iv);
        const ciphertext = new Uint8Array(encryptedSecretData.data);

        // Decrypt the message
        const decryptedBuffer = await window.crypto.subtle.decrypt(
          {
            name: 'AES-GCM',
            iv: iv
          },
          cryptoKey,
          ciphertext
        );

        // Convert decrypted buffer to text
        const decoder = new TextDecoder();
        const decryptedText = decoder.decode(decryptedBuffer);
        document.getElementById('result').value = decryptedText;
        return decryptedText;
      } catch (error) {
        console.error("Decryption failed:", error);
        document.getElementById('result').value = "Could not decrypt the secret. The key may be invalid.";
        return null;
      }
    }
  </script>
</body>

</html>